

import requests

def currency_converter():
    try:
        # Ask user for base currency
        base = input("Enter base currency (e.g., USD, INR, EUR): ").upper()
        url = f"https://api.exchangerate-api.com/v4/latest/{base}"

        response = requests.get(url)
        if response.status_code != 200:
            print(f"Error fetching data: {response.status_code}")
            return
        
        data = response.json()
        currencies = data['rates']
        
        # Show available currencies (first 10)
        print("Available currencies:")
        print(", ".join(list(currencies.keys())[:10]) + ", ...")

        # User inputs
        from_currency = input("Enter the currency you have: ").upper()
        to_currency = input("Enter the currency to convert to: ").upper()
        amount = float(input("Enter the amount to convert: "))

        # Conversion calculation
        if from_currency in currencies and to_currency in currencies:
            usd_amount = amount / currencies[from_currency]
            converted_amount = usd_amount * currencies[to_currency]
            print(f"\n{amount} {from_currency} = {converted_amount:.2f} {to_currency}")
        else:
            print("Invalid currency code entered.")

    except requests.exceptions.RequestException as e:
        print("Network error:", e)
    except ValueError:
        print("Invalid input. Please enter numeric value for amount.")
    except Exception as e:
        print("Error fetching data or converting currency:", e)

currency_converter()
