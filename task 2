
import random

number=random.randint(1,100)
print("welcome to guess the number:")
print("i have choose the number 1 to 100")

attempt=0
while  True:
    guess=input("enter the number:")
    if not guess.isdigit():
        print("please enter the valid number")
        continue
    else:
        guess = int(guess)
        attempt=attempt+1

# compare the guess number
    if guess < number:
        print("to low ! try again ...")
    elif guess > number:
        print("to high ! try again ...")
    else:
        print(f"congragulation you guessen nuber in after {attempt} attempts.")
        