
try:

    
    filename= r'D:\python\python code\books.txt'

    # read the file
    with open(filename,"r") as file:
        content=file.read()
    print("orignal file content")
    print(content)

    # find and replace the word
    find_word=input("enter the  find word:")
    replace_word=input("enter the replace word:")

    modify_word=content.replace(find_word,replace_word)

    # save the modified contend
    with open(filename,"w") as file:
        file.write(modify_word)
    print("sucessfully file update")
except FileNotFoundError:
    print("Error: The file was not found.")
except PermissionError:
    print("you dont have permision")
except Exception as e:
    print(f"an unexpected error:{e}")